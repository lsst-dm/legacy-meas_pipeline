#<? cfg paf policy ?>
#
# stage policy for lsst.meas.pipeline.SourceClassificationStage

sourceList0Key: "sourceSet0"
sourceList1Key: "sourceSet1"

classifier: {
    bits: 0 1
    scope: "pairs"
    pythonClass: "lsst.meas.utils.sourceClassifier.PresentInBothExposuresClassifier"
    parameter.psfFluxThreshold: 1.0
}
classifier: {
    bits: 2
    scope: "pairs"
    pythonClass: "lsst.meas.utils.sourceClassifier.ShapeDiffersInExposuresClassifier"
    parameter.shapeNormDiffThreshold: 1.0
}
classifier: {
    bits: 3 4
    scope: "pairs"
    pythonClass: "lsst.meas.utils.sourceClassifier.PositiveFluxExcursionClassifier"
    parameter.psfFluxThreshold: 1.0
}

