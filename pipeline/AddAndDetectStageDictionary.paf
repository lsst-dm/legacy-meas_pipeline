#<?cfg paf dictionary ?>
#
# Dictionary for AddAndDetectStage
#

target: lsst.meas.pipeline.AddAndDetectStage

definitions: {
	#inputs keys
    exposureKey: {
        type: "string"
        description: "clipboard key for input exposures"
        minOccurs: 1 
    }
    inputPsfKey: {
    	type: "string"
    	description: "input clipboard key for a smothing psf"
    	minOccurs: 0
    	maxOccurs: 1
    }
    
    #output keys
    positiveDetectionKey: {
        type: "string"
        description: "specify the clipboard key of the positive FootprintSet"
        minOccurs: 0
        maxOccurs: 1
        default: "positiveFootprintSet"
    }
    negativeDetectionKey: {
        type: "string"
        description: "specify the clipboard key of the negative FootprintSet"
        minOccurs: 0
        maxOccurs: 1
        default: "negativeFootprintSet"
    }
    smoothingPsfKey: {
        type: "string"
        description: "specify the output key for the smoothingPsf used"
        minOccurs: 0
        maxOccurs: 1
        default: "psf"
    }
    addedExposureKey: {
    	type: "string"
    	description: "output clipboard key for added exposure"
    	default: "addedExposure"
    	minOccurs: 0
    	maxOccurs: 1
    }
    
    #parameters
    psfPolicy: {
        type: "policy"
        dictionary: @PsfDicionary.paf
        description: "includes all the parameters needed to create a PSF"
        minOccurs: 1 
        maxOccurs: 1
    }
    detectionPolicy: {
        type: "policy"
        dictionary: @DetectionDicionary.paf
        description: "includes all the parameters needed to perform source
                      detection on an exposure"
        minOccurs: 1
        maxOccurs: 1
    }
}
