target: lsst.meas.pipeline.ApertureCorrectionStage

definitions: {
    #input clipboard keys
    inputKeys: {
        type: "policy"
        dictionary: {
            definitions: {
                exposure: {
                    type: "string"
                    description: "specify clipboard key of input Exposure"
                    minOccurs: 1
                    maxOccurs: 1
                    default: "exposure"
                }
		cellSet: {
                    type: "string"
                    description: "specify clipboard key of input SourceSet"
                    minOccurs: 1
                    maxOccurs: 1
                    default: "cellSet"
                }
            }
        }
    }

    #output clipboard keys:
    outputKeys: {
        type: "policy"
        dictionary: {
            definitions: {
	        apCorr: {
                    type: "string"
                    description: "specify clipboard key for output apCorr object"
                    minOccurs: 1
                    maxOccurs: 1
		    default: "apCorr"
                }
                sdqa: {
                    type: "string"
                    description: "specify the clipboard key for SDQA"
                    minOccurs: 0
                    maxOccurs: 1
		    default: "sdqaApCorr"
                }
            }
        }
    }

    # control the algorithm
    parameters: {
        type: "policy"
        dictionary: {
            definitions: {
                ApertureCorrectionPolicy: {
                    type: "policy"
                    dictionary: @@meas_algorithms:policy/ApertureCorrectionDictionary.paf
                    description: "Parameters to control aperture correction"
                    minOccurs: 1
                    maxOccurs: 1
                }
            }
        }
    }
}

